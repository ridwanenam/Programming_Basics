#include <stdio.h>

int main() {
    int choice;
    char jenisBarang[100];
    int jumlahBarang;
    double hargaBarangRupiah, kursMataUang, totalNilai = 0;

    printf("Selamat datang di Kalkulator Ekspor-Impor\n");

    do {
        printf("\nMenu:\n");
        printf("1. Impor barang\n");
        printf("2. Ekspor barang\n");
        printf("3. Tampilkan total nilai\n");
        printf("4. Keluar\n");
        printf("Pilih opsi (1/2/3/4): ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Masukkan jenis barang yang diimpor: ");
                scanf("%s", jenisBarang);
                printf("Masukkan jumlah barang yang diimpor: ");
                scanf("%d", &jumlahBarang);
                printf("Masukkan harga per barang dalam Rupiah: ");
                scanf("%lf", &hargaBarangRupiah);
                printf("Masukkan kurs mata uang global (1 unit mata uang global dalam Rupiah): ");
                scanf("%lf", &kursMataUang);
                totalNilai += (jumlahBarang * hargaBarangRupiah / kursMataUang);
                printf("Data impor berhasil ditambahkan.\n");
                break;

            case 2:
                printf("Masukkan jenis barang yang diekspor: ");
                scanf("%s", jenisBarang);
                printf("Masukkan jumlah barang yang diekspor: ");
                scanf("%d", &jumlahBarang);
                printf("Masukkan harga per barang dalam Rupiah: ");
                scanf("%lf", &hargaBarangRupiah);
                printf("Masukkan kurs mata uang global (1 unit mata uang global dalam Rupiah): ");
                scanf("%lf", &kursMataUang);
                totalNilai -= (jumlahBarang * hargaBarangRupiah / kursMataUang);
                printf("Data ekspor berhasil ditambahkan.\n");
                break;

            case 3:
                printf("Total nilai dalam mata uang global: %.2lf\n", totalNilai);
                break;

            case 4:
                printf("Terima kasih telah menggunakan Kalkulator Ekspor-Impor.\n");
                break;

            default:
                printf("Pilihan tidak valid. Silakan pilih opsi yang benar.\n");
                break;
        }
    } while (choice != 4);

    return 0;
}
