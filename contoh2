#include <stdio.h>
#include <string.h>

// Struktur untuk menyimpan data barang
struct Barang {
    char nama[100];
    int jumlah;
    double hargaLokal;
    double hargaGlobal;
};

// Fungsi untuk mengkonversi mata uang global ke mata uang lokal
double konversiKeLokal(double hargaGlobal, double kurs) {
    return hargaGlobal * kurs;
}

// Fungsi untuk mengkonversi mata uang lokal ke mata uang global
double konversiKeGlobal(double hargaLokal, double kurs) {
    return hargaLokal / kurs;
}

int main() {
    int choice;
    struct Barang barang;
    double kursMataUang = 0.0;
    double totalBiaya = 0.0;

    printf("Selamat datang di Aplikasi Ekspor-Impor Skala Industri\n");

    do {
        printf("\nMenu:\n");
        printf("1. Masukkan Data Barang\n");
        printf("2. Konversi ke Mata Uang Lokal\n");
        printf("3. Konversi ke Mata Uang Global\n");
        printf("4. Perhitungan Biaya\n");
        printf("5. Keluar\n");
        printf("Pilih opsi (1/2/3/4/5): ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Masukkan nama barang: ");
                scanf("%s", barang.nama);
                printf("Masukkan jumlah barang: ");
                scanf("%d", &barang.jumlah);
                printf("Masukkan harga dalam mata uang lokal: ");
                scanf("%lf", &barang.hargaLokal);
                printf("Masukkan harga dalam mata uang global: ");
                scanf("%lf", &barang.hargaGlobal);
                break;

            case 2:
                if (kursMataUang == 0.0) {
                    printf("Masukkan kurs mata uang global ke lokal: ");
                    scanf("%lf", &kursMataUang);
                }
                printf("Harga dalam mata uang lokal: %.2lf\n", konversiKeLokal(barang.hargaGlobal, kursMataUang));
                break;

            case 3:
                if (kursMataUang == 0.0) {
                    printf("Masukkan kurs mata uang lokal ke global: ");
                    scanf("%lf", &kursMataUang);
                }
                printf("Harga dalam mata uang global: %.2lf\n", konversiKeGlobal(barang.hargaLokal, kursMataUang));
                break;

            case 4:
                printf("Biaya barang: %.2lf\n", barang.hargaLokal * barang.jumlah);
                totalBiaya += barang.hargaLokal * barang.jumlah;
                break;

            case 5:
                printf("Total biaya keseluruhan: %.2lf\n", totalBiaya);
                printf("Terima kasih telah menggunakan Aplikasi Ekspor-Impor Skala Industri.\n");
                break;

            default:
                printf("Pilihan tidak valid. Silakan pilih opsi yang benar.\n");
                break;
        }
    } while (choice != 5);

    return 0;
}
