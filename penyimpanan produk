#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    char name[100];
    double price;
    int quantity;
} Product;

int main() {
    Product products[10]; // Maksimum 10 produk

    int numProducts = 0; // Jumlah produk yang telah dimasukkan

    printf("Selamat datang! Program ini memungkinkan Anda untuk menyimpan data produk.\n");

    while (1) {
        char option[10];
        printf("Pilih opsi:\n");
        printf("1. Masukkan data produk\n");
        printf("2. Tampilkan data produk yang telah disimpan\n");
        printf("3. Keluar\n");

        scanf("%s", option);

        if (strcmp(option, "1") == 0) {
            if (numProducts < 10) {
                char name[100];
                double price;
                int quantity;

                printf("Masukkan nama barang: ");
                scanf("%s", name);

                printf("Masukkan harga barang: ");
                scanf("%lf", &price);

                printf("Masukkan jumlah barang: ");
                scanf("%d", &quantity);

                // Simpan data produk dalam array
                strcpy(products[numProducts].name, name);
                products[numProducts].price = price;
                products[numProducts].quantity = quantity;

                numProducts++; // Tambahkan jumlah produk yang telah dimasukkan
                printf("Data produk telah disimpan.\n");
            } else {
                printf("Batas penyimpanan produk telah tercapai (maksimum 10 produk).\n");
            }
        } else if (strcmp(option, "2") == 0) {
            if (numProducts > 0) {
                printf("\nData produk yang telah disimpan:\n");
                for (int i = 0; i < numProducts; i++) {
                    printf("Nama: %s\n", products[i].name);
                    printf("Harga: %.2lf\n", products[i].price);
                    printf("Jumlah: %d\n\n", products[i].quantity);
                }
            } else {
                printf("Belum ada data produk yang disimpan.\n");
            }
        } else if (strcmp(option, "3") == 0) {
            printf("Program berhenti.\n");
            break;
        } else {
            printf("Opsi tidak valid. Silakan pilih opsi yang valid.\n");
        }
    }

    return 0;
}
